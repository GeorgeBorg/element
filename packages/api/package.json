{
  "private": true,
  "name": "@element/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "tsnd --respawn --no-notify --transpileOnly --ignore-watch node_modules src/index.ts",
    "work": "ts-node src/workers.ts",
    "db:create": "ts-node node_modules/typeorm/cli.js migration:create -c ${NODE_ENV} -n",
    "db:generate": "ts-node node_modules/typeorm/cli.js migration:generate -c ${NODE_ENV} -n",
    "db:rollback": "ts-node node_modules/typeorm/cli.js migration:revert -c ${NODE_ENV}",
    "seed": "ts-node src/seed.ts",
    "build": "rimraf dist && tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix --cache --ext .ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "eslint --fix --cache --ext .ts,.tsx src",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server-express": "2.24.0",
    "aws-sdk": "2.725.0",
    "bcryptjs": "2.4.3",
    "connect-redis": "3.4.2",
    "dataloader": "2.0.0",
    "dayjs": "1.10.5",
    "dotenv": "7.0.0",
    "express": "4.17.1",
    "express-jwt": "5.3.3",
    "ioredis": "4.27.3",
    "jsonwebtoken": "8.5.1",
    "match-sorter": "4.2.1",
    "morgan": "1.10.0",
    "pg": "7.18.2",
    "reflect-metadata": "0.1.13",
    "type-graphql": "0.17.6",
    "typedi": "0.10.0",
    "typeorm": "0.2.32"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/connect-redis": "0.0.16",
    "@types/express": "4.17.12",
    "@types/express-jwt": "0.0.42",
    "@types/faker": "4.1.12",
    "@types/ioredis": "4.26.4",
    "@types/jest": "24.9.1",
    "@types/jsonwebtoken": "8.5.1",
    "@types/morgan": "1.9.2",
    "@types/node": "11.15.53",
    "faker": "4.1.0",
    "ts-node-dev": "1.1.6"
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  }
}
