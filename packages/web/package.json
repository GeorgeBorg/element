{
  "name": "@fullstack-boilerplate/web",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --port 3000",
    "build": "rm -rf dist && NODE_ENV=production parcel build src/index.html",
    "test": "jest --passWithNoTests",
    "generate": "graphql-codegen --config ./codegen.yml",
    "lint": "tslint -p tsconfig.json",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "apollo-boost": "^0.3.1",
    "graphql": "^14.1.1",
    "polished": "^3.0.2",
    "react": "^16.8.4",
    "react-apollo-hooks": "^0.4.3",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3",
    "styled-media-query": "^2.1.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.0.4",
    "@graphql-codegen/typescript": "^1.0.4",
    "@graphql-codegen/typescript-operations": "^1.0.4",
    "@graphql-codegen/typescript-react-apollo": "^1.0.4",
    "@types/graphql": "^14.0.7",
    "@types/node": "^11.11.5",
    "@types/reach__router": "^1.2.3",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "@types/styled-components": "^4.1.12",
    "jest": "^24.5.0",
    "jest-dom": "^3.1.3",
    "parcel-bundler": "^1.12.3",
    "react-testing-library": "^6.0.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.4000"
  }
}
