{
  "name": "@element/web",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --port 3000",
    "build": "rm -rf dist && NODE_ENV=production parcel build src/index.html",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "generate": "graphql-codegen --config ./codegen.yml",
    "lint": "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
      "git add"
    ]
  },
  "dependencies": {
    "@chakra-ui/core": "^0.5.0",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@noquarter/hooks": "^1.1.13",
    "@noquarter/ui": "^1.1.5",
    "@noquarter/utils": "^1.0.5",
    "@reach/router": "^1.2.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "emotion-theming": "^10.0.19",
    "graphql": "^14.1.1",
    "polished": "^3.0.2",
    "react": "^16.3.2",
    "react-apollo": "^2.5.4",
    "react-apollo-hooks": "^0.4.3",
    "react-beautiful-dnd": "^11.0.0",
    "react-color": "^2.17.0",
    "react-dom": "^16.3.2",
    "react-multi-email": "^0.5.1",
    "styled-components": "^4.2.0",
    "styled-icons": "^8.4.2",
    "styled-media-query": "^2.1.2",
    "use-media": "^1.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.9.1",
    "@graphql-codegen/typescript": "1.9.1",
    "@graphql-codegen/typescript-operations": "1.9.1",
    "@graphql-codegen/typescript-react-apollo": "1.9.1",
    "@types/graphql": "14.2.0",
    "@types/node": "11.13.0",
    "@types/reach__router": "1.2.3",
    "@types/react": "16.8.17",
    "@types/react-beautiful-dnd": "11.0.3",
    "@types/react-color": "3.0.1",
    "@types/react-dom": "16.8.3",
    "@types/styled-components": "4.4.0",
    "eslint-config-react-app": "5.1.0",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "parcel-bundler": "1.12.3"
  }
}
