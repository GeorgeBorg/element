{
  "name": "@fullstack-boilerplate/web",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --port 3000",
    "build": "rm -rf dist && NODE_ENV=production parcel build src/index.html",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "generate": "graphql-codegen --config ./codegen.yml",
    "lint": "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --ext .jsx,.js,.ts,.tsx src",
      "git add"
    ]
  },
  "dependencies": {
    "@noquarter/ui": "^1.1.5",
    "@noquarter/utils": "^1.0.5",
    "@reach/router": "^1.2.1",
    "@types/react-color": "^3.0.0",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "apollo-link-ws": "^1.0.19",
    "apollo-utilities": "^1.3.2",
    "graphql": "^14.1.1",
    "polished": "^3.0.2",
    "react": "^16.3.2",
    "react-apollo": "^2.5.4",
    "react-apollo-hooks": "^0.4.3",
    "react-beautiful-dnd": "^11.0.0",
    "react-color": "^2.17.0",
    "react-dom": "^16.3.2",
    "react-multi-email": "^0.5.1",
    "react-native": "^0.59.9",
    "styled-components": "^4.2.0",
    "styled-icons": "^8.4.2",
    "styled-media-query": "^2.1.1",
    "subscriptions-transport-ws": "^0.9.16",
    "use-media": "^1.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.2.0",
    "@graphql-codegen/typescript": "^1.2.0",
    "@graphql-codegen/typescript-operations": "^1.2.0",
    "@graphql-codegen/typescript-react-apollo": "^1.2.0",
    "@types/graphql": "14.2.0",
    "@types/node": "11.13.0",
    "@types/reach__router": "1.2.3",
    "@types/react": "16.8.17",
    "@types/react-beautiful-dnd": "^11.0.2",
    "@types/react-dom": "16.8.3",
    "@types/styled-components": "^4.1.15",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-react-app": "3.0.8",
    "eslint-plugin-flowtype": "3.5.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "^7.16.0",
    "jest": "24.9.0",
    "jest-dom": "3.1.3",
    "parcel-bundler": "1.12.3",
    "react-testing-library": "6.0.4",
    "ts-jest": "24.0.1",
    "typescript": "3.4.1"
  }
}
