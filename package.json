{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build:api": "cd packages/api && yarn build",
    "build:web": "cd packages/web && yarn build",
    "pre-commit": "lerna run pre-commit",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "heroku-postbuild": "yarn build:api"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream pre-commit"
    }
  },
  "resolutions": {
    "graphql": "14.1.1"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.5"
  }
}
